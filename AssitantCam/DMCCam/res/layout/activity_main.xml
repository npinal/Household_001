<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity" >

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="12dp"
        android:orientation="vertical" >

        <ImageButton
            android:id="@+id/mainCloseButton"
            android:layout_width="53dp"
            android:layout_height="53dp"
            android:layout_gravity="fill_horizontal"
            android:layout_marginTop="12dp"
            android:background="@drawable/main_close_button"
            android:rotation="270" />

        <ImageButton
            android:id="@+id/mainSettingButton"
            android:layout_width="53dp"
            android:layout_height="53dp"
            android:layout_gravity="fill_horizontal"
            android:layout_marginTop="42dp"
            android:background="@drawable/main_setting_button"
            android:rotation="270" />

        <ImageButton
            android:id="@+id/mainModeButton"
            android:layout_width="53dp"
            android:layout_height="53dp"
            android:layout_gravity="fill_horizontal"
            android:layout_marginTop="42dp"
            android:background="@drawable/main_mode_button"
            android:rotation="270" />

        <ImageButton
            android:id="@+id/mainGalleryButton"
            android:layout_width="53dp"
            android:layout_height="53dp"
            android:layout_gravity="fill_horizontal"
            android:layout_marginTop="42dp"
            android:background="@drawable/main_gallery_button"
            android:rotation="270" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_alignParentRight="true"
        android:layout_marginRight="20dp"
        android:gravity="center"
        android:orientation="vertical"
        android:visibility="visible" >

        <ImageButton
            android:id="@+id/mainShutterButton"
            android:layout_width="53dp"
            android:layout_height="53dp"
            android:layout_gravity="fill_horizontal"
            android:background="@drawable/main_shutter_button"
            android:rotation="270" />
    </LinearLayout>

</RelativeLayout>